<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pup Walkers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/foundation/6.2.4/foundation.min.css">
    <link rel="stylesheet" href="/stylesheets/app.css" />
  </head>
  <body>

    <div class="top-bar">
      <div class="container">
        <a class="logo" href="/pups">Pups</a>
        <a class="logo" href="/pups/new">Add A New Pup</a>
        <a class="logo" href="/walkers">Pup Walkers</a>
        <a class="logo" href="/walkers/new">Add A New Walker</a>
      </div>
    </div>

    <% if flash.any? %>
      <div class="flash">
        <div class="container">
          <% flash.each_key do |key| %>
          <%= flash[key] %>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>

    <script src="/javascripts/app.js"></script>
  </body>
</html>
